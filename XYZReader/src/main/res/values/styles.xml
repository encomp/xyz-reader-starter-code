<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThumbnailImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/photo_placeholder</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ArticleTitle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/normal_spacing</item>
        <item name="android:paddingLeft">@dimen/normal_spacing</item>
        <item name="android:paddingRight">@dimen/normal_spacing</item>
        <item name="android:paddingBottom">@dimen/tiny_spacing</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">4</item>
    </style>

    <style name="ArticleSubtitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/normal_spacing</item>
        <item name="android:paddingRight">@dimen/normal_spacing</item>
        <item name="android:paddingBottom">@dimen/tiny_spacing</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>
</resources>
